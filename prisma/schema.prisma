generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StepType {
  lesson
  exercise
  checkpoint
  deploy
}

enum ProgressStatus {
  available
  in_progress
  completed
}

model User {
  id       String   @id @default(cuid())
  name     String?
  email    String?  @unique
  emailVerified DateTime?
  image    String?
  accounts Account[]
  sessions Session[]
  progress Progress[]
  prompts  PromptHistory[]
}

model Track {
  id          String   @id @default(cuid())
  title       String
  description String
  level       String
  order       Int
  modules     Module[]
}

model Module {
  id          String @id @default(cuid())
  title       String
  description String
  order       Int
  track       Track  @relation(fields: [trackId], references: [id])
  trackId     String
  steps       Step[]
}

model Step {
  id                 String      @id @default(cuid())
  title              String
  goal               String
  context            String
  instructions       String[]
  type               StepType
  contentPath        String
  codexPrompt        String
  verifyInstructions String
  order              Int
  module             Module      @relation(fields: [moduleId], references: [id])
  moduleId           String
  progress           Progress[]
  promptHistory      PromptHistory[]
}

model Progress {
  id                 String         @id @default(cuid())
  user               User           @relation(fields: [userId], references: [id])
  userId             String
  step               Step           @relation(fields: [stepId], references: [id])
  stepId             String
  status             ProgressStatus @default(in_progress)
  startedAt          DateTime?      @default(now())
  completedAt        DateTime?
  diffReviewCompleted Boolean       @default(false)
  deployUrl          String?

  @@unique([userId, stepId])
}

model PromptHistory {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  step      Step     @relation(fields: [stepId], references: [id])
  stepId    String
  prompt    String
  createdAt DateTime @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
